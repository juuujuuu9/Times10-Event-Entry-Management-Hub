---
import Layout from '../layouts/Layout.astro';
import { SignIn } from 'auth-astro/components';
import { getSession } from 'auth-astro/server';

let session: Awaited<ReturnType<typeof getSession>> = null;
let configError = false;
try {
  session = await getSession(Astro.request);
} catch (err) {
  console.error('[auth] getSession failed (check AUTH_SECRET and auth config):', err);
  configError = true;
}
const returnTo = Astro.url.searchParams.get('returnTo') || '/admin';
const error = Astro.url.searchParams.get('error');
const required = Astro.url.searchParams.get('required');

// Use AUTH_URL origin when set (fixes post-login redirect to localhost on Vercel).
const authUrl =
  (typeof process !== 'undefined' && process.env?.AUTH_URL) ||
  (typeof import.meta !== 'undefined' && (import.meta.env?.AUTH_URL as string));
const baseOrigin = authUrl ? new URL(authUrl).origin : Astro.url.origin;
const callbackUrl = returnTo.startsWith('/') ? `${baseOrigin}${returnTo}` : `${baseOrigin}/${returnTo}`;

if (session?.user) {
  return Astro.redirect(returnTo);
}
---

<Layout title="Staff Login">
  <div class="min-h-screen flex items-center justify-center bg-slate-50">
    <div class="max-w-md w-full bg-white p-8 rounded-lg shadow-md border border-slate-200">
      <h1 class="text-2xl font-bold mb-2 text-center text-slate-900">Staff Access</h1>
      <p class="text-slate-600 text-center mb-6">
        {required === 'staff'
          ? 'Sign in to access this area.'
          : 'Sign in with your company Google account.'}
      </p>

      {configError && (
        <div class="bg-amber-50 border border-amber-200 text-amber-800 px-4 py-3 rounded mb-4 text-sm">
          Auth is not configured. Set <code class="bg-amber-100 px-1 rounded">AUTH_SECRET</code> (and optionally <code class="bg-amber-100 px-1 rounded">GOOGLE_CLIENT_ID</code> / <code class="bg-amber-100 px-1 rounded">GOOGLE_CLIENT_SECRET</code>) in <code class="bg-amber-100 px-1 rounded">.env</code>. Run <code class="bg-amber-100 px-1 rounded">openssl rand -hex 32</code> to generate a secret.
        </div>
      )}
      {error && (
        <div class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded mb-4">
          Access denied. Use an allowed staff email or check your configuration.
        </div>
      )}

      <SignIn
        provider="google"
        options={{ callbackUrl, redirect: true }}
        class="w-full flex items-center justify-center gap-3 px-4 py-3 border border-slate-300 rounded-lg hover:bg-slate-50 transition-colors cursor-pointer font-medium text-slate-900"
      >
        <svg class="w-5 h-5" viewBox="0 0 24 24" aria-hidden="true">
          <path
            fill="#4285F4"
            d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"
          />
          <path
            fill="#34A853"
            d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"
          />
          <path
            fill="#FBBC05"
            d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"
          />
          <path
            fill="#EA4335"
            d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"
          />
        </svg>
        <span>Sign in with Google</span>
      </SignIn>

      <p class="mt-4 text-sm text-slate-500 text-center">
        <a href="/" class="hover:underline text-[#d63a2e]">‚Üê Back to event page</a>
      </p>
    </div>
  </div>
</Layout>
