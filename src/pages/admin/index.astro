---
import Layout from '../../layouts/Layout.astro';
import { AdminPage } from '../../components/AdminPage';
import { ThemeToggle } from '../../components/ThemeToggle';
import { getAllEvents, getStaffLastEventId, getEventById } from '../../lib/db';
import { getSignOutUrl, getSignOutFormProps } from '../../lib/auth-url';

const { user } = Astro.locals;
let signOutUrl = '/api/auth/signout?callbackUrl=/';
let signOutForm: { action: string; callbackUrl: string; csrfToken: string } | null = null;
let events: { id: string; name: string; slug: string }[] = [];
let pageError = '';
let lastSelectedEventId = '';

try {
  signOutUrl = getSignOutUrl(Astro.request, Astro.url.origin);
  signOutForm = await getSignOutFormProps(Astro.request);
  const rows = await getAllEvents();
  events = rows.map((e) => ({ id: String(e.id), name: String(e.name), slug: String(e.slug) }));
  if (user?.id) {
    const raw = await getStaffLastEventId(user.id);
    // Safety: if event was deleted (or soft-deleted), don't use stale ref
    if (raw) {
      const event = await getEventById(raw);
      lastSelectedEventId = event?.id ?? '';
    }
  }
} catch (err) {
  console.error('[admin] page setup failed:', err);
  pageError = err instanceof Error ? err.message : 'Failed to load page';
}
const urlEventId = Astro.url.searchParams.get('event') ?? '';
const selectedEventId = urlEventId || lastSelectedEventId;
---

<Layout title="Attendees | Times10">
  <div class="min-h-screen bg-background">
    <header class="bg-card border-b border-border sticky top-0 z-50">
      <div class="max-w-7xl mx-auto px-2 sm:px-6 lg:px-8">
        <div class="flex items-center justify-between h-16">
          <div class="flex items-center gap-3">
            <a href="/admin" class="flex items-center gap-3">
              <div class="bg-primary p-2 rounded-lg">
                <svg class="h-6 w-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
                </svg>
              </div>
              <span class="font-bold text-foreground">Admin</span>
            </a>
          </div>
          <div class="flex items-center gap-4">
            <ThemeToggle client:load />
            <span class="text-sm text-muted-foreground">{user?.name ?? user?.email ?? 'Staff'}</span>
            {signOutForm ? (
              <form action={signOutForm.action} method="POST" class="inline">
                <input type="hidden" name="callbackUrl" value={signOutForm.callbackUrl} />
                <input type="hidden" name="csrfToken" value={signOutForm.csrfToken} />
                <button type="submit" class="text-sm text-muted-foreground hover:text-primary bg-transparent border-none cursor-pointer p-0 font-inherit">Sign out</button>
              </form>
            ) : (
              <a href={signOutUrl} class="text-sm text-muted-foreground hover:text-primary">Sign out</a>
            )}
          </div>
        </div>
      </div>
    </header>

    <main class="max-w-7xl mx-auto px-2 sm:px-6 lg:px-8 py-8">
      {pageError ? (
        <div class="rounded-lg border border-[var(--red-6)] bg-[var(--red-2)] p-4 text-[var(--red-11)]">
          <p class="font-medium">Could not load admin</p>
          <p class="mt-1 text-sm">{pageError}</p>
          <p class="mt-2 text-sm">Check the server logs and ensure DATABASE_URL is set. Refresh the page to retry.</p>
        </div>
      ) : (
        <AdminPage client:load events={events} selectedEventId={selectedEventId} />
      )}
    </main>
  </div>
</Layout>
