---
import Layout from '../../layouts/Layout.astro';
import { AdminPage } from '../../components/AdminPage';
import { getAllEvents } from '../../lib/db';

const { user } = Astro.locals;
const events = await getAllEvents();
const selectedEventId = Astro.url.searchParams.get('event') ?? '';
---

<Layout title="Admin Dashboard">
  <div class="min-h-screen bg-slate-50">
    <header class="bg-white border-b border-slate-200 sticky top-0 z-50">
      <div class="max-w-7xl mx-auto px-2 sm:px-6 lg:px-8">
        <div class="flex items-center justify-between h-16">
          <div class="flex items-center gap-3">
            <a href="/admin" class="flex items-center gap-3">
              <div class="bg-[#d63a2e] p-2 rounded-lg">
                <svg class="h-6 w-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
                </svg>
              </div>
              <span class="font-bold text-slate-900">Admin</span>
            </a>
            <a href="/scanner" class="text-sm text-slate-600 hover:text-[#d63a2e]">Scanner</a>
            <a href="/admin/events" class="text-sm text-slate-600 hover:text-[#d63a2e]">Events</a>
          </div>
          <div class="flex items-center gap-4">
            <span class="text-sm text-slate-600">{user?.name ?? user?.email ?? 'Staff'}</span>
            <a href="/api/auth/signout" class="text-sm text-slate-600 hover:text-[#d63a2e]">Sign out</a>
          </div>
        </div>
      </div>
    </header>

    <main class="max-w-7xl mx-auto px-2 sm:px-6 lg:px-8 py-8">
      <h1 class="text-2xl font-bold text-slate-900 mb-6">Attendees</h1>
      <AdminPage client:load events={events} selectedEventId={selectedEventId} />
    </main>
  </div>
</Layout>
