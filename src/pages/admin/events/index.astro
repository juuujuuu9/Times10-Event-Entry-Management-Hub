---
import Layout from '../../../layouts/Layout.astro';
import { getAllEvents } from '../../../lib/db';

const events = await getAllEvents();
---

<Layout title="Events">
  <div class="min-h-screen bg-slate-50">
    <header class="bg-white border-b border-slate-200 sticky top-0 z-50">
      <div class="max-w-7xl mx-auto px-2 sm:px-6 lg:px-8">
        <div class="flex items-center justify-between h-16">
          <div class="flex items-center gap-3">
            <a href="/admin" class="flex items-center gap-3">
              <div class="bg-[#d63a2e] p-2 rounded-lg">
                <svg class="h-6 w-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
                </svg>
              </div>
              <span class="font-bold text-slate-900">Admin</span>
            </a>
            <a href="/admin" class="text-sm text-slate-600 hover:text-[#d63a2e]">Attendees</a>
            <a href="/" class="text-sm text-slate-600 hover:text-[#d63a2e]">Scanner</a>
          </div>
        </div>
      </div>
    </header>

    <main class="max-w-7xl mx-auto px-2 sm:px-6 lg:px-8 py-8">
      <div class="flex items-center justify-between mb-6">
        <h1 class="text-2xl font-bold text-slate-900">Events</h1>
        <a
          href="/admin/events/new"
          class="rounded bg-[#d63a2e] px-4 py-2 text-sm font-medium text-white hover:bg-[#c2352a]"
        >
          + New event
        </a>
      </div>

      <div class="rounded-lg border border-slate-200 bg-white shadow-sm overflow-hidden">
        <table class="min-w-full divide-y divide-slate-200">
          <thead class="bg-slate-50">
            <tr>
              <th class="px-4 py-3 text-left text-xs font-medium uppercase text-slate-500">Name</th>
              <th class="px-4 py-3 text-left text-xs font-medium uppercase text-slate-500">Slug</th>
              <th class="px-4 py-3 text-left text-xs font-medium uppercase text-slate-500">Actions</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-slate-200">
            {events.length === 0 ? (
              <tr>
                <td colspan="3" class="px-4 py-8 text-center text-slate-500">No events yet. Create one to get started.</td>
              </tr>
            ) : (
              events.map((ev) => (
                <tr class="hover:bg-slate-50">
                  <td class="px-4 py-3 text-sm font-medium text-slate-900">{ev.name}</td>
                  <td class="px-4 py-3 text-sm text-slate-600">{ev.slug}</td>
                  <td class="px-4 py-3 flex items-center gap-3">
                    <a
                      href={`/admin?event=${ev.id}`}
                      class="p-1.5 text-[#d63a2e] hover:bg-red-50 rounded"
                      title="View attendees"
                      aria-label={`View attendees for ${ev.name}`}
                    >
                      <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                      </svg>
                    </a>
                    <button
                      type="button"
                      data-delete-event
                      data-event-id={ev.id}
                      data-event-name={ev.name}
                      class="p-1.5 text-slate-400 hover:text-red-600 hover:bg-red-50 rounded"
                      title="Delete event"
                      aria-label={`Delete event ${ev.name}`}
                    >
                      <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                      </svg>
                    </button>
                  </td>
                </tr>
              ))
            )}
          </tbody>
        </table>
      </div>
    </main>
  </div>

  <script>
    document.querySelectorAll('[data-delete-event]').forEach((btn) => {
      btn.addEventListener('click', async () => {
        const id = btn.getAttribute('data-event-id');
        const name = btn.getAttribute('data-event-name');
        if (!id || !confirm(`Delete event "${name}"? This will also remove all attendees for this event.`)) return;
        try {
          const res = await fetch(`/api/events/${id}`, { method: 'DELETE' });
          if (!res.ok) {
            const data = await res.json().catch(() => ({}));
            alert(data.error || 'Failed to delete event');
            return;
          }
          window.location.href = '/admin/events';
        } catch (e) {
          alert('Failed to delete event');
        }
      });
    });
  </script>
</Layout>
