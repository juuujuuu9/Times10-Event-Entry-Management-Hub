---
import Layout from '../../../layouts/Layout.astro';
import { getAllEvents } from '../../../lib/db';

const events = await getAllEvents();
---

<Layout title="Events">
  <div class="min-h-screen bg-slate-50">
    <header class="bg-white border-b border-slate-200 sticky top-0 z-50">
      <div class="max-w-7xl mx-auto px-2 sm:px-6 lg:px-8">
        <div class="flex items-center justify-between h-16">
          <div class="flex items-center gap-3">
            <a href="/admin" class="flex items-center gap-3">
              <div class="bg-[#d63a2e] p-2 rounded-lg">
                <svg class="h-6 w-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
                </svg>
              </div>
              <span class="font-bold text-slate-900">Admin</span>
            </a>
            <a href="/admin" class="text-sm text-slate-600 hover:text-[#d63a2e]">Attendees</a>
            <a href="/scanner" class="text-sm text-slate-600 hover:text-[#d63a2e]">Scanner</a>
          </div>
        </div>
      </div>
    </header>

    <main class="max-w-7xl mx-auto px-2 sm:px-6 lg:px-8 py-8">
      <div class="flex items-center justify-between mb-6">
        <h1 class="text-2xl font-bold text-slate-900">Events</h1>
        <a
          href="/admin/events/new"
          class="rounded bg-[#d63a2e] px-4 py-2 text-sm font-medium text-white hover:bg-[#c2352a]"
        >
          + New event
        </a>
      </div>

      <div class="rounded-lg border border-slate-200 bg-white shadow-sm overflow-hidden">
        <table class="min-w-full divide-y divide-slate-200">
          <thead class="bg-slate-50">
            <tr>
              <th class="px-4 py-3 text-left text-xs font-medium uppercase text-slate-500">Name</th>
              <th class="px-4 py-3 text-left text-xs font-medium uppercase text-slate-500">Slug</th>
              <th class="px-4 py-3 text-left text-xs font-medium uppercase text-slate-500">Actions</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-slate-200">
            {events.length === 0 ? (
              <tr>
                <td colspan="3" class="px-4 py-8 text-center text-slate-500">No events yet. Create one to get started.</td>
              </tr>
            ) : (
              events.map((ev) => (
                <tr class="hover:bg-slate-50">
                  <td class="px-4 py-3 text-sm font-medium text-slate-900">{ev.name}</td>
                  <td class="px-4 py-3 text-sm text-slate-600">{ev.slug}</td>
                  <td class="px-4 py-3">
                    <a href={`/admin?event=${ev.id}`} class="text-sm text-[#d63a2e] hover:underline">
                      View attendees
                    </a>
                  </td>
                </tr>
              ))
            )}
          </tbody>
        </table>
      </div>
    </main>
  </div>
</Layout>
