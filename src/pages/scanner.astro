---
import Layout from '../layouts/Layout.astro';
import { CheckInScanner } from '../components/CheckInScanner';
import { Toaster } from '../components/ui/sonner';

const { user } = Astro.locals;
---

<Layout title="Check-in Scanner">
  <div class="min-h-screen bg-slate-900 text-white">
    <header class="bg-slate-800 border-b border-slate-700 sticky top-0 z-50">
      <div class="max-w-7xl mx-auto px-4 py-3 flex justify-between items-center">
        <div class="flex items-center gap-4">
          <h1 class="text-xl font-bold">Check-in Scanner</h1>
          <a href="/admin" class="text-sm text-slate-300 hover:text-white">Admin</a>
        </div>
        <div class="flex items-center gap-4">
          <span class="text-sm text-slate-300">{user?.name ?? user?.email ?? 'Staff'}</span>
          <a href="/api/auth/signout" class="text-sm text-red-400 hover:text-red-300">Sign out</a>
        </div>
      </div>
    </header>
    <main class="p-4">
      <CheckInScanner client:load standalone={true} />
    </main>
    <Toaster client:load position="top-center" richColors />
  </div>
</Layout>
